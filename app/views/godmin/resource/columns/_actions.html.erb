<div class="btn-group btn-group-sm pull-right">
  <% if policy(resource).show? %>
    <%= link_to translate_scoped("actions.show"), [*@resource_parents, resource], class: "btn btn-default" %>
  <% end %>
  <% if policy(resource).edit? %>
    <%= link_to translate_scoped("actions.edit"), [:edit, *@resource_parents, resource], class: "btn btn-default" %>
  <% end %>
  <% if policy(resource).destroy? %>
    <%= link_to translate_scoped("actions.destroy"), [*@resource_parents, resource], method: :delete,
      class: "btn btn-danger", data: { confirm: translate_scoped("actions.confirm_message") } %>
  <% end %>
</div>
